<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                style="@style/headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booster rules" />
            <Button
                android:id="@+id/refresh_booster_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refresh Booster rules" />

            <Button
                android:id="@+id/clear_booster_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Clear Booster rules" />
            <Button
                android:id="@+id/run_booster_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run booster rules" />

            <Button
                android:id="@+id/reset_last_check_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset last check time" />
        </LinearLayout>

        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current rules IDs" />

            <TextView
                android:id="@+id/rules_ids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                style="@style/headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persons" />

            <TextView
                android:id="@+id/booster_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
