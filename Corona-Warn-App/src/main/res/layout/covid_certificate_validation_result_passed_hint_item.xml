<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/validation_rules_result_valid_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_16">

    <TextView
        android:id="@+id/validation_rules_result_valid_title"
        style="@style/subtitleBoldSixteen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/validation_start_note_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.rki.coronawarnapp.ui.view.BulletPointTextView
        android:id="@+id/certificate_validation_result_bulletpoint_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:description="@string/validation_start_note_point_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/validation_rules_result_valid_title" />

    <de.rki.coronawarnapp.ui.view.BulletPointTextView
        android:id="@+id/certificate_validation_result_bulletpoint_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:description="@string/validation_start_note_point_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/certificate_validation_result_bulletpoint_one" />

    <de.rki.coronawarnapp.ui.view.BulletPointTextView
        android:id="@+id/certificate_validation_result_bulletpoint_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:description="@string/validation_start_note_point_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/certificate_validation_result_bulletpoint_two" />

</androidx.constraintlayout.widget.ConstraintLayout>
