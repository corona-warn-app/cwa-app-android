<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_24"
    android:paddingEnd="@dimen/padding_24"
    android:paddingBottom="@dimen/padding_24">

    <ImageView
        android:id="@+id/family_icon"
        android:layout_width="@dimen/width_40"
        android:layout_height="@dimen/height_40"
        android:layout_marginTop="@dimen/margin_24"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_family_test" />

    <TextView
        android:id="@+id/family_badge_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_certificate_notification_badge"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_11"
        android:translationX="7dp"
        android:translationY="-7dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/family_icon"
        app:layout_constraintTop_toTopOf="@id/family_icon"
        tools:text="99"
        tools:visibility="visible" />
    <TextView
        android:id="@+id/family_test_title"
        style="@style/headline5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/family_test_card_title"
        app:layout_constraintStart_toEndOf="@id/family_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/family_test_subtitle_news"
        style="@style/subtitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/family_test_card_subtitle_news"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/family_test_title"
        app:layout_constraintTop_toBottomOf="@id/family_test_title"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
