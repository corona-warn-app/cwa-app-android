<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Vaccination"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_24"
    android:layout_marginTop="@dimen/margin_8"
    android:orientation="vertical"
    android:padding="@dimen/padding_16"
    tools:context="covidcertificate.person.ui.details.items.VaccinationInfoCard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:id="@+id/vaccination_info_title"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textStyle="bold"
            tools:text="Impfstatus" />
    </LinearLayout>

    <TextView
        android:id="@+id/vaccination_info_subtitle"
        style="@style/body2Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Letzte Impfung noch XX Tage gültig" />

    <TextView
        android:id="@+id/vaccination_info_body"
        style="@style/body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:textSize="@dimen/font_14"
        tools:text="Sie haben nun alle derzeit geplanten Impfungen erhalten. Ihr Impfschutz ist vollständig." />

    <TextView
        android:id="@+id/vaccination_info_faq"
        style="@style/body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24"
        android:text="@string/vaccination_card_booster_eligible_faq"
        android:textColorLink="@color/colorTextTint"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
