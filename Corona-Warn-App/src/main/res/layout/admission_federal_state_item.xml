<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <TextView
        android:id="@+id/title"
        style="@style/subtitle"
        android:layout_width="0dp"
        android:textColor="@color/admission_item_color"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_32"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_4"
        android:duplicateParentState="true"
        app:layout_constraintBottom_toTopOf="@id/subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/margin_16"
        tools:text="Baden-Würtemberg" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_32"
        android:layout_marginBottom="@dimen/margin_16"
        android:duplicateParentState="true"
        android:textColor="@color/admission_item_color"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Für dieses Bundesland liegen momentan keine Regeln vor" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_1"
        android:layout_marginStart="@dimen/margin_32"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
