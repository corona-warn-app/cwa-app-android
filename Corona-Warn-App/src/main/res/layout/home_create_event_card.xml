<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal"
        tools:showIn="@layout/home_card_container_layout">

        <TextView
            android:id="@+id/create_event_card_headline"
            style="@style/headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true"
            android:text="@string/create_event_card_headline"
            android:lines="2"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
             android:id="@+id/create_event_card_subtitle"
             style="@style/subtitleMedium"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/spacing_small"
             android:layout_marginEnd="@dimen/spacing_tiny"
             android:text="@string/create_event_card_subtitle"
             app:layout_constraintTop_toBottomOf="@id/create_event_card_headline"
             app:layout_constraintStart_toStartOf="@id/create_event_card_headline"
             app:layout_constraintEnd_toStartOf="@id/create_event_card_icon"/>

        <ImageView
            android:id="@+id/create_event_card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_organizer"
            app:layout_constraintTop_toTopOf="@id/create_event_card_subtitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/create_event_card_button"
            style="@style/buttonPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/create_event_card_button"
            app:layout_constraintTop_toBottomOf="@id/create_event_card_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
