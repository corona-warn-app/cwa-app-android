<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".familytest.ui.selection.TestRegistrationSelectionFragment">

    <include
        android:id="@+id/submission_test_result_available_header"
        layout="@layout/include_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@{@drawable/ic_close}"
        app:title="@{@string/family_test_reg_selection_header}"/>

    <TextView
        android:id="@+id/subtitle"
        style="@style/subtitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:text="@string/family_test_reg_selection_subtitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        style="@style/GreyCard">

        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="@dimen/circle_icon"
            android:layout_height="@dimen/circle_icon"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/card_dark"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person_test_selection_item" />

        <TextView
            android:id="@+id/person_title"
            style="@style/headline6"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="32dp"
            android:text="@string/family_test_reg_selection_person_title"
            app:layout_constraintStart_toEndOf="@id/person_icon"
            app:layout_constraintTop_toTopOf="@id/person_icon" />

        <TextView
            android:id="@+id/person_subtitle"
            style="@style/body2Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:paddingBottom="16dp"
            android:text="@string/family_test_reg_selection_person_subtitle"
            app:layout_constraintStart_toEndOf="@id/person_icon"
            app:layout_constraintTop_toBottomOf="@id/person_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        style="@style/GreyCard">

        <ImageView
            android:id="@+id/family_icon"
            android:layout_width="@dimen/circle_icon"
            android:layout_height="@dimen/circle_icon"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/card_dark"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_family_test_selection_item" />

        <TextView
            android:id="@+id/family_title"
            style="@style/headline6"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="32dp"
            android:text="@string/family_test_reg_selection_family_title"
            app:layout_constraintStart_toEndOf="@id/family_icon"
            app:layout_constraintTop_toTopOf="@id/family_icon" />

        <TextView
            android:id="@+id/family_subtitle"
            style="@style/body2Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:paddingBottom="16dp"
            android:text="@string/family_test_reg_selection_family_subtitle"
            app:layout_constraintStart_toEndOf="@id/family_icon"
            app:layout_constraintTop_toBottomOf="@id/family_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>