<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/colorSurface"
    android:orientation="vertical"
    tools:context=".familytest.ui.selection.TestRegistrationSelectionFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/CWAMaterialToolbar.Close.Transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/family_test_reg_selection_header" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/subtitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/family_test_reg_selection_subtitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/person"
        style="@style/GreyCard.Ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="@dimen/width_32"
            android:layout_height="@dimen/height_32"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_32"
            android:background="@drawable/circle"
            android:backgroundTint="@color/card_dark"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person_test_selection_item" />

        <TextView
            android:id="@+id/person_title"
            style="@style/headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_32"
            android:text="@string/family_test_reg_selection_person_title"
            android:textSize="@dimen/font_16"
            app:layout_constraintStart_toEndOf="@id/person_icon"
            app:layout_constraintTop_toTopOf="@id/person_icon" />

        <TextView
            android:id="@+id/person_subtitle"
            style="@style/body2Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_24"
            android:paddingBottom="@dimen/margin_16"
            android:text="@string/family_test_reg_selection_person_subtitle"
            app:layout_constraintStart_toEndOf="@id/person_icon"
            app:layout_constraintTop_toBottomOf="@id/person_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:hyphenationFrequency="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_contact_diary_right_arrow"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/family"
        style="@style/GreyCard.Ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_16"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/family_icon"
            android:layout_width="@dimen/width_32"
            android:layout_height="@dimen/height_32"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_32"
            android:background="@drawable/circle"
            android:backgroundTint="@color/card_dark"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_family_test_selection_item" />

        <TextView
            android:id="@+id/family_title"
            style="@style/headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_32"
            android:text="@string/family_test_reg_selection_family_title"
            android:textSize="@dimen/font_16"
            app:layout_constraintStart_toEndOf="@id/family_icon"
            app:layout_constraintTop_toTopOf="@id/family_icon" />

        <TextView
            android:id="@+id/family_subtitle"
            style="@style/body2Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_24"
            android:paddingBottom="@dimen/padding_16"
            android:text="@string/family_test_reg_selection_family_subtitle"
            app:layout_constraintStart_toEndOf="@id/family_icon"
            app:layout_constraintTop_toBottomOf="@id/family_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:hyphenationFrequency="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_contact_diary_right_arrow"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
