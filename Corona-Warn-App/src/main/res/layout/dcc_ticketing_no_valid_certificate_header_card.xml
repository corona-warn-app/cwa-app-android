<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/selection_title"
        style="@style/materialSubtitleSixteen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="@string/dcc_ticketing_certificate_selection_no_certificates_found_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_certificates_found"
        style="@style/body2Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dcc_ticketing_certificate_selection_no_certificates_found_subtitle"
        app:layout_constraintEnd_toEndOf="@id/selection_title"
        app:layout_constraintStart_toStartOf="@id/selection_title"
        app:layout_constraintTop_toBottomOf="@id/selection_title" />

    <TextView
        android:id="@+id/required_certificates_title"
        style="@style/materialSubtitleSixteen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/dcc_ticketing_certificate_selection_requested_certificates_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/no_certificates_found"
        app:layout_constraintStart_toStartOf="@id/no_certificates_found"
        app:layout_constraintTop_toBottomOf="@id/no_certificates_found" />

</androidx.constraintlayout.widget.ConstraintLayout>