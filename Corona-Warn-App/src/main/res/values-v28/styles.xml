<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="subtitle" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:lineHeight">@dimen/line_height_normal</item>
        <item name="fontStyle">normal</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="boldSubtitle" parent="@style/subtitle">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="subtitleSemanticRed" parent="@style/subtitle">
        <item name="android:textColor">@color/colorTextSemanticRed</item>
        <item name="android:lineHeight">@dimen/line_height_normal</item>
    </style>

    <style name="subtitleMedium" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/colorTextPrimary2</item>
        <item name="android:lineHeight">@dimen/line_height_normal</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="body1" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:lineHeight">@dimen/line_height_large</item>
    </style>

    <style name="body2" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:lineHeight">@dimen/line_height_small</item>
    </style>

    <style name="body2Medium" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorTextPrimary2</item>
        <item name="android:lineHeight">@dimen/line_height_small</item>
    </style>

    <style name="StatisticsCardValueLabel" parent="subtitle">
        <item name="android:textColor">@color/colorStatisticsValueLabel</item>
        <item name="android:lineHeight">@dimen/line_height_tiny</item>
    </style>

    <style name="textTopAppBar" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight">600</item>
    </style>
</resources>